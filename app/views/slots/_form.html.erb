<% form_for @slot do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :desc %><br />
    <%= f.text_area :desc %>
  </p>
  <p>
    <%= f.label :start %><br />
    <%= f.text_field :start %>
  </p>
  <p>
    <%= f.label :end %><br />
    <%= f.text_field :end %>
  </p>
  <p>
    <%= f.label :program_id %><br />
    <%= collection_select(:slot, :program_id, Program.all, :id, :name) %>
  </p>
  <p>
    <%= f.label 'Autoriser le direct sur cette plage horaire' %><br />
    <%= f.check_box :allow_live %>
  </p>

  <p><%= f.submit "Submit" %></p>
<% end %>
