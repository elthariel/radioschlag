u = User.find_by_username(ENV['AUTHD_ACCOUNT'])

if u.valid_password?(ENV['AUTHD_PASSWORD']) and u.ftp_account_id != 0
  p 'auth_ok:1'
  p "uid:#{RADIO_CONFIG[:ftp_id]}"
  p "gid:#{RADIO_CONFIG[:ftp_gid]}"
  p "dir:#{RADIO_CONFIG[:ftp_root]}/#{u.username}/./"
  p "user_quota_size:#{u.ftp_account.quota}"
  p "per_user_max:#{u.ftp_account.sessions}"
else
  p 'auth_ok:0'
end

